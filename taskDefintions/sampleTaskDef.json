{
    "family": "shippable",
    "containerDefinitions": [
        {
            "name": "node-app",
            "image": "${IMAGE_NAME}",

            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "essential": true,
            "environment": [
                {
                    "name": "ENVIRONMENT",
                    "value": "unmanaged"
                }
            ]
        }
    ]
}
